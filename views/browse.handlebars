<main class="container mt-3">
    <div class="p-2 px-5 text-white rounded bg-dark top-bg-browse mb-1">
        <div class="col-md-12 px-0">
            <h1 class="display-4 font-italic">Find where you want to go</h1>
            <p class="lead my-3">Learn about someones visit, about their recommendations, and their favourite parts of a
                trip</p>
        </div>
    </div>

    <div class="row">
        {{#each results}}
        <div class="col-lg-6">
            <div class="card">
                <h5 class="card-title px-2">City: {{ cityname }}</h5>
                <img class="card-img-top card-img-mxh" src="{{ picture }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Review</h5>
                    <p class="card-text card-text-minh">{{ review }}</p>
                    <h5 class="card-title">Hotel: </h5>
                    <h6 class="card-subtitle mb-2">{{ hotel }}</h6>
                    <p class="card-text">{{ hotelrev }}</p>
                    <h5 class="card-title">Restaurant: </h5>
                    <h6 class="card-subtitle mb-2">{{ restaurant }}</h6>
                    <p class="card-text">{{ restaurantrev }}</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Added {{ dateFormat createdAt }} by {{ username }}</small>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</main>


