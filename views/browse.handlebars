<main class="container mt-3">
    <div class="row">
        <div class="col">
            <h2 class="col-lg-9 mb-4">Browse the reviews</h2>
        </div>
    </div>

    {{#each results}}
    <div class="row mb-4 justify-content-md-center">
        <div class="col-lg-9 ">
            <div class="card">
                <div class="row card-body">
                    <div class="col-md-9">
                        <div></div>
                        <h2 class="card-title mb-3">{{cityname}}</h2>
                        <p class="card-text">
                            {{review}}
                        </p>
                        <a href="#" class="btn btn-primary mb-1 d-none d-md-block">View this review</a>
                    </div>
                    <img class="col-md-3" src="{{picture}}" alt="city-picture" />
                </div>
                <a href="#" class="btn btn-primary mb-1 mx-2 d-md-none">See more</a>
            </div>
        </div>
    </div>
    {{/each}}

</main>


