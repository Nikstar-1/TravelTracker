<main class="container mt-3">
    <div class="p-2 px-5 text-white rounded bg-dark top-bg-home">
        <div class="col-md-12 px-0">
            <h1 class="display-4 font-italic">Travel Tracker</h1>
            <p class="lead my-3">More than numbers. More than a rating. Share an experience, what makes a trip and the
                places to visit</p>
        </div>
    </div>

    {{!-- cards --}}
    <div class="container bg-dark pt-3">
        <div class="row ml-3">
            <h4 class="display-4 font-italic text-white">Recent featured reviews</h2>
        </div>
        <div class="row">

            {{#each random}}
            <div class="col-lg-6 col-md-12">
                <div class="card card-height">
                    <h5 class="card-title px-2 pt-1">City: {{ cityname }}</h5>
                    <img class="card-img-top card-img-mxh" src="{{ picture }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Review</h5>
                        <p class="card-text card-text-minh">{{ review }}</p>
                        <h5 class="card-title">Hotel: </h5>
                        <h6 class="card-subtitle mb-2">{{ hotel }}</h6>
                        <p class="card-text">{{ hotelrev }}</p>
                        <h5 class="card-title">Restaurant: </h5>
                        <h6 class="card-subtitle mb-2">{{ restaurant }}</h6>
                        <p class="card-text">{{ restaurantrev }}</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Added {{ dateFormat createdAt }}</small>
                        <small class="text-muted">by {{ username }}</small>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
    <div class="row mb-2 ">
        <div class="col-md-12">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 h-md-250 position-relative text-white">
                <div class="col p-4 d-flex flex-column position-static bg-dark">
                    <h3 class="mb-1 mt-1">Become a part of the community</h3>
                    <p class="card-text my-auto mb-2">Share an experience, let the communtiy know what you thought of a
                        trip, your throughts on a hotel, your favourite restaurant. </p>
                    <a type="button" class="btn btn-light stretched-link my-auto" href="/submit">Submit a review
                        here</a>
                </div>
            </div>
        </div>
    </div>
</main>

